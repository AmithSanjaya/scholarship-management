@model IEnumerable<SM.UserObjects.Menu>

<div class="iq-sidebar  sidebar-default ">
    <div class="iq-sidebar-logo d-flex align-items-center justify-content-between">
        <a href="@Url.Action("Dashboard", "SM", new {})" class="header-logo">
            <img src="~/assets/images/login/Lak Saviya Foundation Logo.png" class="img-fluid rounded-normal light-logo" alt="logo"><h5 class="logo-title light-logo ml-3">SM Admin</h5>
        </a>
        <div class="iq-menu-bt-sidebar ml-0">
            <i class="las la-bars wrapper-menu"></i>
        </div>
    </div>
    <div class="data-scrollbar" data-scroll="1">
        <nav class="iq-sidebar-menu">
            <ul id="iq-sidebar-toggle" class="iq-menu">
                <li class="@(Url.Action("Dashboard", "SM") == Request.Url.AbsolutePath ? "active" : string.Empty)">
                    <a href="@Url.Action("Dashboard", "SM", new {})" class="svg-icon">
                        <svg class="svg-icon" id="p-dash1" width="20" height="20" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"></path>
                            <polyline points="3.27 6.96 12 12.01 20.73 6.96"></polyline>
                            <line x1="12" y1="22.08" x2="12" y2="12"></line>
                        </svg>
                        <span class="ml-4">Dashboard</span>
                    </a>
                </li>
                @if (Model != null)
                {
                    foreach (var item in Model)
                    {
                        <li class="@(Url.Action(item.Action, item.Controller) == Request.Url.AbsolutePath ? "active" : string.Empty)">
                            <a href="#@item.CSSClass" class="collapsed" data-toggle="collapse" aria-expanded="false">
                                <svg class="svg-icon" id="p-dash13" width="20" height="20" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <path d="M16 4h2a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2V6a2 2 0 0 1 2-2h2"></path>
                                    <rect x="8" y="2" width="8" height="4" rx="1" ry="1"></rect>
                                </svg>
                                <span class="ml-4">@item.DisplayName</span>
                                @if (item.ChildMenus.Count > 0)
                                {
                                    <svg class="svg-icon iq-arrow-right arrow-active" width="20" height="20" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <polyline points="10 15 15 20 20 15"></polyline>
                                        <path d="M4 4h7a4 4 0 0 1 4 4v12"></path>
                                    </svg>
                                }
                            </a>
                            @if (item.ChildMenus.Count > 0)
                            {
                                <ul id="@item.CSSClass" class="iq-submenu collapse" data-parent="#iq-sidebar-toggle">
                                    @foreach (var sitem in item.ChildMenus)
                                    {
                                        <li class="@(Url.Action(sitem.Action, sitem.Controller) == Request.Url.AbsolutePath ? "active" : string.Empty)">
                                                    
                                        @if (sitem.ChildMenus.Count > 0)
                                        {
                                            <a href="#@sitem.CSSClass" class="collapsed" data-toggle="collapse" aria-expanded="false">
                                                <svg class="svg-icon" id="p-dash12" width="20" height="20" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                                    <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                                                    <polyline points="14 2 14 8 20 8"></polyline>
                                                    <line x1="16" y1="13" x2="8" y2="13"></line>
                                                    <line x1="16" y1="17" x2="8" y2="17"></line>
                                                    <polyline points="10 9 9 9 8 9"></polyline>
                                                </svg>
                                                <span class="ml-4">@sitem.DisplayName</span>
                                                <svg class="svg-icon iq-arrow-right arrow-active" width="20" height="20" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                                    <polyline points="10 15 15 20 20 15"></polyline>
                                                    <path d="M4 4h7a4 4 0 0 1 4 4v12"></path>
                                                </svg>
                                            </a>
                                            
                                            <ul id="@sitem.CSSClass" class="iq-submenu collapse" data-parent="#@item.CSSClass">
                                            @foreach (var ssitem in sitem.ChildMenus)
                                            {

                                                <li class="@(Url.Action(ssitem.Action, ssitem.Controller) == Request.Url.AbsolutePath ? "active" : string.Empty)">
                                                    <a href="@Url.Action(ssitem.Action, ssitem.Controller)" class="@(Url.Action(ssitem.Action, ssitem.Controller) == Request.Url.AbsolutePath ? "active" : string.Empty)">
                                                        <i class="las la-minus"></i><span>@ssitem.DisplayName</span>
                                                    </a>
                                                </li>
                                            }
                                            </ul>
                                        }
                                        else
                                        {
                                            <a href="@Url.Action(sitem.Action, sitem.Controller)" class="@(Url.Action(sitem.Action, sitem.Controller) == Request.Url.AbsolutePath ? "active" : string.Empty)">
                                                <i class="las la-minus"></i><span>@sitem.DisplayName</span>
                                            </a>
                                        }
                                        </li>
                                    }
                                </ul>
                            }
                        </li>
                    }
                }
            </ul>
        </nav>
        <div id="sidebar-bottom" class="position-relative sidebar-bottom">
            <div class="card border-none">
                <div class="card-body p-0">
                    <div class="sidebarbottom-content">

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

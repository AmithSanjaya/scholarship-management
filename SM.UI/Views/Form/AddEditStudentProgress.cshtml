
@{
    ViewBag.Title = "AddEditStudentProgress";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        @{ Html.RenderAction("StudentView", "Form");}
        @{ Html.RenderAction("CommonView", "Form");}
        @{ Html.RenderAction("SponserView", "SM");}

        <input type="hidden" id="StudentSponserID" />

        <div class="col-sm-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between">
                    <div class="header-title">
                        <h4 class="card-title">Add/Edit Student Progress</h4>
                    </div>
                    @{ Html.RenderAction("FormButton", "Admin");}
                </div>
                <div class="card-body">
                    <form action="page-list-customers.html" data-toggle="validator">
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label>Student : <a class="badge bg-success mr-2" data-toggle="tooltip" data-placement="top" title="" data-original-title="View Student" href="#" id="PreviewStudent"> <i class="ri-eye-line mr-0"></i></a></label>
                                    <select id="cmbStudent" class="selectpicker form-control" data-style="py-0"></select>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label>Effective Month :</label>
                                    <input class="form-control" id="EffectiveMonth" name="EffectiveMonth" type="month">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>Achievement Title :</label>
                                    <input type="text" class="form-control" id="StudentAchievementTitle">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>Attachment :</label>
                                    <div class="custom-file mb-3">
                                        <input type="file" class="custom-file-input" id="customFile" name="customFile">
                                        <label class="custom-file-label" for="customFile" id="customFileLabel" name="customFileLabel">Choose file</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="custom-control custom-checkbox">
                                    <input type="checkbox" class="custom-control-input" id="rbSchol">
                                    <label class="custom-control-label" for="rbSchol">Send Email to Sponser <a class="badge bg-success mr-2" data-toggle="tooltip" data-placement="top" title="" data-original-title="View Sponsers" href="#" id="PreviewSponser"> <i class="ri-eye-line mr-0"></i></a></label>

                                </div>
                            </div>

                        </div>
                    </form>
                </div>
                <div class="col-lg-12">
                    <hr />
                    <div class="table-responsive rounded mb-3">
                        <table class="data-table table mb-0 tbl-server-info">
                            <thead class="bg-white text-uppercase">
                                <tr class="ligth ligth-data">
                                    <th hidden>StudentID</th>
                                    <th hidden>StudentProgressID</th>
                                    <th>Progress Title</th>
                                    <th>Attachment</th>
                                    <th>Send Email</th>
                                    <th>Effective Month</th>
                                    <th hidden>FileName</th>
                                    <th hidden>FilePath</th>
                                    <th hidden>File</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody class="ligth-body" id="StudentProgress"></tbody>
                        </table>
                    </div>
                </div>
            </div>
            <!-- Page end  -->
        </div>
    </div>
</div>

<script async src="~/Scripts/PageJs/StudentProgress.js"></script>


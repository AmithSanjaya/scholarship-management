
@{
    ViewBag.Title = "AddEditSponsorDetails";
}

<input type="hidden" id="SponserID" />

<div class="container-fluid add-form-list">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between">
                    <div class="header-title">
                        <h4 class="card-title FormHead">Add Sponsor</h4>
                    </div>
                    @{ Html.RenderAction("FormButton", "Admin");}
                </div>
                <div class="card-body">
                    <form action="page-list-customers.html" data-toggle="validator">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Name</label>
                                    <input type="text" class="form-control" id="SponserName" required>
                                    <div class="help-block with-errors"></div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Email</label>
                                    <input type="text" class="form-control" id="SponserEmail" required>
                                    <div class="help-block with-errors"></div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Phone Number</label>
                                    <input type="text" class="form-control" id="SponserPhoneNo" required>
                                    <div class="help-block with-errors"></div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Country</label>
                                    <select id="SponserCounty" class="selectpicker form-control" data-style="py-0"></select>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>Address</label>
                                    <textarea class="form-control" rows="4" id="SponserAddress"></textarea>
                                </div>
                            </div>
                            @*<div class="col-md-12">
                                <div class="form-group">
                                    <label>City</label>
                                    <input type="text" class="form-control" id="SponserCity" required>
                                    <div class="help-block with-errors"></div>
                                </div>
                            </div>*@

                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>Payment Scheme</label>
                                    <select id="SponserPayScheme" class="selectpicker form-control" data-style="py-0"></select>
                                </div>
                            </div>

                            <div class="form-group col-sm-12">
                                            <div class="custom-control custom-checkbox">
                                                <input type="checkbox" class="custom-control-input" id="rbInactive">
                                                <label class="custom-control-label" for="rbInactive">Is Inactive</label>
                                            </div>
                                            <div id="InactiveDIV">
                                                <label for="fname">Reason for Inactive:</label>
                                                <input type="text" class="form-control" id="ReasonForInactive">
                                            </div>
                                        </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- Page end  -->
</div>

<script async src="~/Scripts/PageJs/Sponser.js"></script>
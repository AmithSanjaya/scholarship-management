@model IEnumerable<SM.UserObjects.SponserVM>
@{
    ViewBag.Title = "SponsershipDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        @{ Html.RenderAction("SponserView", "SM");}
        <div class="col-lg-12">
            <div class="d-flex flex-wrap flex-wrap align-items-center justify-content-between mb-4">
                <div>
                    <h4 class="mb-3">Sponsers Details</h4>
                </div>
                <a href="@Url.Action("AddEditSponserDetails", "SM")" class="btn btn-primary add-list"><i class="las la-plus mr-3"></i>Add Sponser</a>
            </div>
        </div>
        <div class="col-lg-12">
            <div class="table-responsive rounded mb-3">
                <table class="data-tables table mb-0 tbl-server-info">
                    <thead class="bg-white text-uppercase">
                        <tr class="ligth ligth-data">
                            <th hidden>SponserID</th>
                            <th>Sponser Name</th>
                            <th>Email</th>
                            <th>Contact No</th>
                            <th>Country</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody class="ligth-body">
                        @foreach (var d in Model)
                        {
                            <tr>
                                <td hidden>@d.SponserID</td>
                                <td>@d.SponserName</td>
                                <td>@d.Email</td>
                                <td>@d.ContactNo</td>
                                <td>@d.CountryName</td>
                                <td>@d.Status</td>
                                <td>
                                    <div class="d-flex align-items-center list-action">
                                        <a class="badge badge-info mr-2" data-placement="top" title="" data-original-title="View"
                                           data-toggle="modal" onclick="GetSponser(@d.SponserID)"><i class="ri-eye-line mr-0"></i></a>
                                        <a class="badge bg-success mr-2" data-toggle="tooltip" data-placement="top" title="" data-original-title="Edit"
                                           href="@Url.Action("AddEditSponserDetails", "SM", new { SponserID = @d.SponserID,TypeID=2 })"><i class="ri-pencil-line mr-0"></i></a>
                                        <a class="badge bg-warning mr-2" data-toggle="tooltip" data-placement="top" title="" data-original-title="Delete"
                                           onclick="DeleteSponser(@d.SponserID)"><i class="ri-delete-bin-line mr-0"></i></a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!-- Page end  -->
</div>

<script async src="~/Scripts/PageJs/Sponser.js"></script>